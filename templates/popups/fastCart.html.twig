<div class="message mfp-hide" id="popup-fast-buy">
    <div class="message-inner">
        <div class="message-inner__form">
            <form class="fast-buy-form">
                <div class="label-popup">
                    Быстрый заказ
                </div>
                <div class="form-group">
                    <input id="name" type="text" name="data[name]" placeholder="Имя">
                </div>
                <div class="form-group">
                    <input id="phone" type="text" name="data[phone]" placeholder="Телефон">
                </div>
                <div class="form-group">
                    <textarea name="data[comment]" placeholder="Комментарий"></textarea>
                </div>
                <input type="hidden" name="data[id]" value="{{ id }}">
                <div class="btn-group">
                    <button class="btn-sent red sent-form-fast">
                        Отправить
                    </button>
                    <button class="btn-cancel popup-modal-dismiss">
                        Отменить
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>